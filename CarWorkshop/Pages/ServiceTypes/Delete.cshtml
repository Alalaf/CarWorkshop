@page
@model CarWorkshop.Pages.ServiceTypes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h3>Are you sure you want to delete this?</h3>

<br />
<h2 class="text-info">
    Edit Service
</h2>
<br />

<form method="post">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for="servicetype.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="servicetype.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="servicetype.Name" disabled class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="servicetype.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="servicetype.Price" disabled class="form-control" />
            </div>

        </div>
    </div>


    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DeleteAndBackToListButton" />
        </div>
    </div>
</form>